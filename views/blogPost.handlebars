<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="text-center">
  {{#if blogpost.comments.length}}
  <h3>Comments</h3>
  {{#each blogpost.comments as |comment|}}
  {{> comments}}
  {{/each}}
  {{/if}}
</div>
<div class="text-center" text-align="center">
  <label for="comment">Leave a comment:</label>
  </br>
  <textarea id="comment" type="text" name="comment" rows="5" cols="33"></textarea>
  </br>
  <button class="comment-button" name="">Submit</button>
</div>