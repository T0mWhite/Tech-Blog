<div class="row">
  <div class="col-auto">
    <h2>Hey {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-article-form">
      <div class="form-group">
        <label for="article-title">Post Title:</label>
        <input class="form-input" type="text" id="article-title" name="article-title" />
      </div>
      <div class="form-group">
        <label for="article-desc">Post Body:</label>
        <textarea class="form-input" id="article-desc" name="article-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if articles.length}}
  <div class="col-md-6 article-list">
    <h3>Current Posts:</h3>

    {{#each articles as |article|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/article/{{article.id}}" data-id="{{article.title}}">{{article.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger deleteBtn" data-id="{{article.id}}">DELETE</button>
      </div>
      
{{!-- Update text area --}}
    <div>
    <form class="form new-article-form">
      <div class="form-group">
        <label for="article-title">Post Title:</label>
        <input id="edit-post-title" class="form-input" type="text" name="article-title" value="{{article.title}}"/>
      </div>
      <div class="form-group">
        <label for="article-desc">Post Body:</label>
        <textarea id="edit-post-desc" class="form-input" name="article-desc" rows="1">{{article.description}}</textarea>
      </div>
      <div class="form-group">
        <button id="updateBtn" type="submit" class="btn btn-primary" data-id="{{article.id}}">Edit</button>
      </div>
    </form>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>
