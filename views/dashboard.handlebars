<div class="row">
  <div class="col-auto">
    <h2>Hey {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-blogPost-form">
      <div class="form-group">
        <label for="blogPost-title">Post Title:</label>
        <input class="form-input" type="text" id="blogPost-title" name="blogPost-title" />
      </div>
      <div class="form-group">
        <label for="blogPost-desc">Post Body:</label>
        <textarea class="form-input" id="blogPost-desc" name="blogPost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if blogPosts.length}}
  <div class="col-md-6 blogPost-list">
    <h3>Current Posts:</h3>

    {{#each blogPosts as |blogPost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogPost.id}}" data-id="{{blogPost.title}}">{{blogPost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogPost.id}}">DELETE</button>
      </div>
      
{{!-- Update text area --}}
    <form class="form new-blogPost-form">
      <div class="form-group">
        <label for="blogPost-title">Post Title:</label>
        <input class="form-input" type="text" name="blogPost-title" value="{{blogPost.title}}"/>
      </div>
      <div class="form-group">
        <label for="blogPost-desc">Post Body:</label>
        <textarea class="form-input" name="blogPost-desc" rows="1">{{blogPost.description}}</textarea>
      </div>
      <div class="form-group">
        <button id="updateBtn" type="submit" class="btn btn-primary">Edit</button>
      </div>
    </form>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
